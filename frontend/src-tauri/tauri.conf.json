{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "ng build",
    "beforeDevCommand": "ng serve",
    "devPath": "http://localhost:4200",
    "distDir": "../dist/race-director-frontend"
  },
  "package": {
    "productName": "race-director",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.s452645.racedirector",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Race Director",
        "width": 800,
        "visible": false,
        "center": true
      },
      {
        "width": 400,
        "height": 200,
        "decorations": false,
        "center": true,
        "transparent": true,
        "alwaysOnTop": true,
        "url": "assets/splashscreen.html",
        "label": "splashscreen"
      }
    ]
  }
}